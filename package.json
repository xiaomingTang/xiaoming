{
  "name": "xiaoming",
  "version": "0.8.0",
  "description": "@zimi packages",
  "author": "xiaomingTang",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "@zimi/*"
  ],
  "repository": "https://github.com/xiaomingTang/xiaoming.git",
  "browserslist": {
    "production": [
      ">1% in US",
      ">1% in CN",
      "maintained node versions"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "analyze": "source-map-explorer @zimi/*/dist/*.es.js",
    "analyze-simple": "ts-node --project tsconfig.node.json utils/analyze.ts",
    "build": "pnpm --filter ./@zimi/* run build",
    "build:watch": "pnpm --filter ./@zimi/* run build:watch",
    "lint": "eslint --fix @zimi",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged --quiet"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "yarn lint",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "yarn lint",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/glob": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1"
  },
  "TODO": [
    "test"
  ],
  "dependencies": {
    "glob": "^8.1.0",
    "utils": "^0.3.1"
  }
}
