{
  "name": "xiaoming",
  "version": "0.10.0",
  "description": "@zimi packages",
  "author": "xiaomingTang",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "@zimi/*"
  ],
  "repository": "https://github.com/xiaomingTang/xiaoming.git",
  "browserslist": {
    "production": [
      ">1% in US",
      ">1% in CN",
      "maintained node versions"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install && bash -c 'chmod ug+x .husky/*'",
    "analyze": "tsx utils/analyze.ts",
    "build": "pnpm --filter ./@zimi/* run build",
    "build:watch": "pnpm --filter ./@zimi/* run build:watch",
    "commit": "git-cz",
    "test": "echo todo test",
    "lint": "eslint --fix @zimi",
    "lint:commit": "commitlint -e",
    "lint-staged": "lint-staged --quiet",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint-staged",
      "pre-push": "pnpm run lint",
      "commit-msg": "pnpm run lint:commit"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "TODO": [
    "test"
  ],
  "dependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "glob": "^10.3.10",
    "tsx": "^4.7.0",
    "utils": "^0.3.1"
  }
}
